<header role="banner" class="group" id="global-header">
  <div class="header-global group">
    <h1><a href="/" title="Go to the gov.uk homepage">GOV.UK</a></h1>
    <nav role="navigation">
      <ul>
        <li><a href="/help">Help</a></li>
        <li id="gs-feedback"><a href="/feedback">Feedback</a></li>
      </ul>
    </nav>

    <%- unless local_assigns[:no_search] -%>
    <div class="search-help">
      <form id="search" class="site-search" action="/search" method="get" role="search">
        <label for="site-search-text" class="visuallyhidden">
          <span>Search</span>
        </label>
        <input type="search" name="q" id="site-search-text" />
        <input type="submit" value="Search" class="button" />
      </form>
    </div>
    <%- end -%>
  </div>
</header><!--end header-->

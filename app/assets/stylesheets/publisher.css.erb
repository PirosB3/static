/* visited link colour overrides */

#wrapper.guide aside .chapters-navigation li a:visited,
#wrapper.guide .pagination li a:visited,
#wrapper.programme .article-container nav a:visited {
  color: #2E3191;
}

#wrapper.guide header {
  position: relative;
}
#wrapper.guide header hgroup {
/*  margin-left: 0;*/
}

.alternative-guide {
  margin: 0 auto 0.5em;
  overflow: hidden;
  width: 9.5em;
}

.alternative-guide.video .video-wrapper {
  background: #000;
  height: 5em;
  margin: 0 auto;
  overflow: hidden;
  text-align: center;
  width: 8.5em;
}

.alternative-guide.video .video-wrapper img {
  margin-top: -0.5em;
}

.alternative-guide.video a span {
  background-image: url(<%= asset_path "icon-video.png" %>);
  background-position: 0 0.5em;
  background-repeat: no-repeat;
  display: block;
  float: right;
  font-size: 0.85em;
  line-height: 2em;
  padding-left: 2.25em;
}

#wrapper.guide article {
  border-left: solid 1px #C9D0D0;
  margin-left: -1px;
  min-height: 40em;
  width: 75%;
}

#wrapper.video-guide article {
  /* get rid of border on video guide pages */
  border-left: none;
  margin-left: 0;
}

.lte-ie8 #wrapper.guide article {
  width: 74.999%;
  float: left;
}
.guide article .inner {
  padding: 0.5em 2.5em 1em 2.5em;
}
#wrapper.guide aside {
  float: left;
  width: 25%;
}

#wrapper.guide aside .inner {
  padding: 0;
  width: 100%;
}
aside .chapters-navigation {
  display: block;
  float: right;
  margin-top: 0.5em;
  width: 95%;
}
aside .chapters-navigation ol {
  font-size: 0.85em;
  margin: 0;
  padding: 0;
}
aside .chapters-navigation li {
  list-style: none;
}
aside .chapters-navigation li a {
  background-color: #E1E8E8;
  border-top: solid 1px #C9D0D0;
  display: block;
  font-size: 1.2em;
  padding: 0.75em 0.75em;
  text-decoration: none;
}
aside .chapters-navigation li:first-child a {
  border-top: none;
}
aside .chapters-navigation li.active a {
  background: #fff;
  border: solid 1px #C9D0D0;
  border-right: none;
  display: block;
  margin: 0 0 -1px -1px;
/*  margin-bottom: -1px;*/
  position: relative;
  z-index: 2;
}
.lte-ie8 aside .chapters-navigation li.active a {
  bottom: -1px;
  margin: 0;
}

aside .chapters-navigation li a:hover {
  background-color: #97C5E5;
  color: #fff;
}
aside .chapters-navigation li.active a:hover {
  background: #fff;
  color: #1576FB;
}
aside .chapters-navigation li a span {
  display: block;
}
aside .chapters-navigation li a .part-label {
  color: #3f3f3f;
  display: block;
  font-size: 0.75em;
  line-height: 1.5em;
  text-transform: uppercase;
}
aside .chapters-navigation li a:hover .part-label {
  color: #fff;
}
aside .chapters-navigation li.active a:hover .part-label {
  color: #1576FB;
}
aside .chapters-navigation li a .part-title {
  line-height: 1.3em;
}
aside .chapters-navigation li.active a .part-title {
  color: #000;
}

#wrapper.video-guide article {
  width: 100%;
}

.video-guide article .inner {
  padding-bottom: 2em;
}

.video-guide .meta-data {
  border-top: none;
  margin: 1em 0 2em 2em;
}

/* guides pagination */

.pagination {
/*  background: #E1E8E8;*/
  display: block;
  margin: 2em 0 0 0;
}

.pagination ul {
  font-family: "Helvetica Neue", Arial, Helvetica, sans-serif;
  margin: 0;
  padding: 0;
}

.pagination li {
  float: left;
  font-size: 1em;
  list-style: none;
  text-align:right;
  margin: 0;
  padding: 0;
  width: 48.5%;
}

.pagination li:first-child {
  margin-right: 3%;
  text-align: left;
}

.pagination li a {
  background-color: #E1E8E8;
  display: block;
  float: left;
  min-height: 4.5em;
  text-decoration: none;
  width: 80%;
}

.pagination li a:hover {
  background-color: #97C5E5;
  color: #fff;
}

.pagination .previous a {
  background-image: url(<%= asset_path "section-divider-arrow-rev.png" %>);
  background-position: 5% 50%;
  background-repeat: no-repeat;
  padding: 0.75em 5% 0.75em 15%;
}

.pagination .next a {
  background-image: url(<%= asset_path "section-divider-arrow.png" %>);
  background-position: 95% 50%;
  background-repeat: no-repeat;
  padding: 0.75em 15% 0.75em 5%;
}

.pagination .first,
.pagination .last {
  background-color: #E1E8E8;
  min-height: 4.5em;
}

.pagination .first span,
.pagination .last span {
  display: block;
  min-height: 4.5em;
  padding: 0.75em 5%;
  width: 90%;
}

.pagination .pagination-label {
  display: block;
  font-size: 0.85em;
  line-height: 1em;
  margin-bottom: 0.5em;
}

.pagination li a .pagination-label {
  color: #000;
  display: block;
}

.pagination li a .pagination-part-title {
  text-decoration: underline;
}

/*
 * Transactions and local transactions styles
 */


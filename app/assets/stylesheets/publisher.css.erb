/*
  Programme format
*/

#wrapper.programme article .inner {
  padding: 2em 5em 2em 5em;
}

#wrapper.programme .programme-progression {
  padding: 0 3em 0 0.5em;
  position: relative;
}

#wrapper.programme .programme-progression ol {
  background-color: #C9D0D0;
  float: left;
  list-style: none;
  margin: 0;
  padding: 0;
  position: relative;
  z-index: 5;
}
.lte-ie8 #wrapper.programme .programme-progression ol {
  _overflow: hidden;
  _padding: 1px 1px 0 0;
}

#wrapper.programme .programme-progression ol li {
  float: left;
}
.lte-ie8 #wrapper.programme .programme-progression ol li {
  _width: 7.5em;
}

#wrapper.programme .programme-progression li a {
  background-color: #E1E8E8;
  background-image: url(<%= asset_path "section-divider-arrow.png" %>);
  background-position: 94% 50%;
  background-repeat: no-repeat;
  display: block;
  height: 2.25em;
  line-height: 2.25em;
  margin-left: 1px;
  padding: 0 1.5em 0 0.75em;
  position: relative;
  text-align: center;
  text-decoration: none;
  top: 0;
}
.lte-ie8 #wrapper.programme .programme-progression li a {
  _background-image: none;
  _padding: 0 0.5em;
}

#wrapper.programme .programme-progression li:first-child a {
  border-left: solid 1px #E1E8E8;
  margin-left: 0;
}

#wrapper.programme .programme-progression li a:hover,
#wrapper.programme div.further-information a:hover,
#wrapper.programme .part-pagination li:first-child a:hover {
  background-color: #97C5E5;
}

#wrapper.programme .programme-progression li.active a,
#wrapper.programme div.further-information.active a {
  background-color: #fff;
  border: solid 1px #C9D0D0;
  border-bottom: solid 1px #fff;
  color: #000;
  margin: -1px -1px -1px 0;
  position: relative;
  z-index: 5;
}
.lte-ie8 #wrapper.programme .programme-progression li.active a,
.lte-ie8 #wrapper.programme div.further-information.active a {
/*  border-bottom: none;*/
  _bottom: -1px;
}

#wrapper.programme .programme-progression li.active a:hover {
  background-color: #fff;
  color: #2E8ACA;
}

#wrapper.programme div.further-information.active a:hover {
  background-color: #fff;
  color: #2E8ACA;
}

div.further-information {
  margin: 0;
}

div.further-information a {
  background-color: #E1E8E8;
  display: block;
  float: right;
  line-height: 2.25em;
  height: 2.25em;
  padding: 0 0.75em;
  text-decoration: none;
}
.lte-ie8 div.further-information a {
  _margin-top: 1px;
}

div.further-information.active a {
  background: #fff;
  z-index: 5;
}

#wrapper.programme article {
  border-top: solid 1px #C9D0D0;
  min-height: none;
  width: 100%;
}

.js-enabled #wrapper.programme article {
  min-height: 20em;
}

.js-enabled #wrapper.programme article header {
  display: none;
}

.js-enabled #wrapper.programme .part-pagination.return-to-top,
.js-enabled #wrapper.programme article.tabs-panel {
  display:none;
}

#wrapper.programme article.tabs-panel-selected,
.js-enabled #wrapper.programme article.tabs-panel-selected {
  display:block;
}

#wrapper.programme .part-pagination {
  margin-top: 3em;
}

#wrapper.programme .part-pagination ul {
  list-style: none;
  margin: 0;
  padding: 0;
}

#wrapper.programme .part-pagination li {
  float: left;
  font-size: 1em;
}

#wrapper.programme .part-pagination li a {
  line-height: 2.15em;
  height: 2.15em;
  position: relative;
}

#wrapper.programme .part-pagination li:first-child a {
  background-color: #E1E8E8;
  background-image: url(../images/section-divider-arrow.png);
  background-position: 94% 50%;
  background-repeat: no-repeat;
  border-bottom: solid 1px #C9D0D0;
  display: block;
  margin-right: 3em;
  padding: 0 1.75em 0 0.5em;
  text-decoration: none;
}

#wrapper.programme .part-pagination a:hover .progressor {
  background-position: -573px 0;
}

/* contacts popup */

#popup.contact-popup {
  background-color: #F4F4F4;
  padding: 1em 2em;
  width: 50%;
}

.contact-popup .contact {
  width: auto;
}

.lte-ie8 #wrapper.local_transaction .advisory.minor {
  margin-top: 0;
  margin-bottom: 0;
  position: relative;
  top: -2em;
}

#wrapper.place .advisory.minor span,
#wrapper.transaction .advisory.minor span,
#wrapper.local_transaction .advisory.minor span {
  font-size: 0.85em;
}

.get-started-intro {
/*  font-size: 1em;*/
/*  line-height: 1.25em;*/
}

#wrapper.transaction .continue,
#wrapper.local_transaction .continue {
  background: #F9F9F9 url(<%= asset_path "info-icon.png" %>) no-repeat 1% 50%;
  border: 1px solid #586E75;
/*  font-size: 0.9em;*/
  margin-bottom: 1.2em;
  padding: 0.15em 1em;
/*  text-indent: 25px;*/
}

.find-location-for-service {
  background: #f8f8f8 url(<%= asset_path "locator-icon.png" %>) no-repeat 1em 1em;
  border: none;
  height: 4.25em;
  margin: 1.2em 0;
  padding: 1.2em 0.75em 1.2em 3.5em;
}

.find-location-for-service fieldset input.postcode {
  border: 1px solid #bbb;
  line-height: 1.4em;
  width: 8em;
  margin: 0 0.5em;
}

.find-location-for-service p.geolocate-me {
  border-top: 1px solid #ddd;
  font-size: 1em;
  margin-bottom: 0;

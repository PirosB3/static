/* Global header */

#global-header {
  -webkit-box-shadow: 0 0 5px rgba(0,0,0,0.2);
  -moz-box-shadow: 0 0 5px rgba(0,0,0,0.2);
  box-shadow: 0 0 5px rgba(0,0,0,0.2);
	color: #fff;
	min-height: 1em;
  position: static;
	width: 100%;
}

@media only screen and (min-width:670px) {
  #global-header {
  	position: fixed;
  	top: 0;
  	width: 100%;
  	z-index: 99999;
  }
}

.lte-ie8 #global-header {
	position: fixed;
	top: 0;
	width: 100%;
	z-index: 99999; 
}

#global-header h1 {
	font-size: 1em;
	line-height: 2.5em;
	float: left;
  margin-right: 6em;
  padding-top: 0.3em;
  padding-bottom: 0.3em
}

.lte-ie8 #global-header h1 {
	height: 1.25em;
}

#global-header h1 a {
	background-image: url(<%= asset_path 'templogo.png' %>);
	background-repeat: no-repeat;
	color: #fff;
	float: left;
	padding: 0 0 0 3.25em;
	text-decoration: none;
}

#global-header h1 a:hover {
	text-decoration: underline;
}

#global-header ul, #global-header ol {
	margin: 0;
	padding: 0;
}

#global-header ul li, #global-header ol li {
	float: left;
	list-style: none;
}

#global-header .header-global {
	background-color: #333;
  padding: 0 4%
}

#global-header .header-global ul {
  float: left;
  margin-right: 0;
  line-height: 3em
}

#global-header .header-global ul li {
	font-size: 0.8em;
	margin-right: 1.25em;
	margin-bottom: 0

}

#global-header .header-global ul li:last-child {
	margin-right: 0;
}

#global-header .header-global ul li a {
	color: #ccc;
	text-decoration: none;
  font-weight: bold
}

#global-header .header-global ul li a:hover {
  color: #fff
}

#global-header .header-context {
	background-color: #fff;
  border-top: solid 4px #ddd;
	border-bottom: solid 1px rgba(0,0,0,0.2);
  padding: 0
}
.lte-ie8 #global-header .header-context {
	border-bottom: solid 1px #ddd;
}

#global-header .header-context.citizen {
  border-color: #ED6900;
  border-bottom-color: #ba5200;
}

#global-header .header-context.government {
  border-color: #cdce00;
  border-bottom-color: #9a9b00
}

#global-header .header-context nav {
  font-size: 0.875em;
  line-height: 1.714em;
  margin: 0 auto;
  margin-bottom: 1.714em;
  margin-bottom: 0;
  background: #fff;
  padding: 0.25em 4%;
}

#global-header .header-context nav div {
  display: inline
}

#global-header .header-context nav a {
  margin-right: 2%;
  white-space: nowrap
}
#global-header .header-context.government nav {
  font-weight: bold;
  text-decoration: none;
}

#global-header .header-context.government nav a {
  color: #777;
}
#global-header .header-context.government nav a:hover {
  color: #9a9b00
}

#global-header .header-context nav a:last-child {
  margin-right: 0
}

@media only screen and (min-width: 865px) {
  #global-header .header-context nav a.home,
  #global-header .header-context ol li.current-context {
    margin-right: 4%
  }
}

#global-header .header-context ol {
	font-size: 1em;
}

#global-header .header-context ol li {
	margin-right: 1em;
}

.search-help {
	background-color: #fff;
  border-bottom: 1px solid #ddd;
  clear: both;
  margin: 0;
  padding: 0.25em 4% 0.5em 4%
}

.search-help fieldset {
  margin-bottom: 0
}

form.site-search {
	font-size: 0.875em;
	padding: 0;
}

.site-search #site-search-text {
  -moz-border-radius: 2px;
  -webkit-border-radius: 2px;
  border-radius: 2px;
  margin: 0;
  font-size: 1em;
  line-height: 1.5em;
  margin-bottom: 1.5em;
  background: #fff;
  border: 1px solid #ccc;
  color: #777;
  display: inline-block;
  margin-bottom: 0;
  margin-right: 0.5em;
  margin-top: 0;
  max-width: 100%;
  outline: none;
  padding: 0.25em;
  line-height: 1.65em;
  width: 12.5em
}

.search-help input[type="submit"] {
  -moz-border-radius: 6px;
  -webkit-border-radius: 6px;
  border-radius: 6px;
  -o-transition-property: background;
  -o-transition-duration: 0.3s;
  -o-transition-timing-function: linear;
  -moz-transition-property: background;
  -moz-transition-duration: 0.3s;
  -moz-transition-timing-function: linear;
  -webkit-transition-property: background;
  -webkit-transition-duration: 0.3s;
  -webkit-transition-timing-function: linear;
  transition-property: background;
  transition-duration: 0.3s;
  transition-timing-function: linear;
  margin: 0;
  font-size: 1em;
  line-height: 1.5em;
  margin-bottom: 1.5em;
  background-color: white;
  background-image: -webkit-gradient(linear, left top, left bottom, from(#fff), to(#efefef));
  background-image: -webkit-linear-gradient(top, #fff, #efefef);
  background-image: -moz-linear-gradient(top, #fff, #efefef);
  background-image: -o-linear-gradient(top, #fff, #efefef);
  background-image: -ms-linear-gradient(top, #fff, #efefef);
  background-image: linear-gradient(top, #fff, #efefef);
  filter: progid:DXImageTransform.Microsoft.gradient(startColorStr='white', EndColorStr='#efefef');
  border: 1px solid #ddd;
  border-bottom: 1px solid #aaa;
  border-top: 1px solid #e5e5e5;
  color: #777;
  cursor: pointer;
  display: inline-block;
  font-weight: bold;
  margin-top: 0.2em;
  margin-bottom: 0;
  padding-bottom: 0.2em;
  padding-top: 0.25em;
  padding: 0.35em 0.75em;
  text-decoration: none;
  text-shadow: 0 1px rgba(255,255,255,0.75)
}

.search-help input[type="submit"]:hover {
  color: #666;
  background-color: #fafdff;
  background-image: -webkit-gradient(linear, left top, left bottom, from(#fafdff), to(#d8d8d8));
  background-image: -webkit-linear-gradient(top, #fafdff, #d8d8d8);
  background-image: -moz-linear-gradient(top, #fafdff, #d8d8d8);
  background-image: -o-linear-gradient(top, #fafdff, #d8d8d8);
  background-image: -ms-linear-gradient(top, #fafdff, #d8d8d8);
  background-image: linear-gradient(top, #fafdff, #d8d8d8);
  filter: progid:DXImageTransform.Microsoft.gradient(startColorStr='#fafdff', EndColorStr='#d8d8d8');
  border: 1px solid #ccc;
  border-bottom: 1px solid #999;
  border-top: 1px solid #ddd
}

.search-help input[type="submit"]:active {
  border: 1px solid #999;
  background-color: #fafdff;
  background-image: -webkit-gradient(linear, left top, left bottom, from(#fafdff), to(#bbb));
  background-image: -webkit-linear-gradient(top, #fafdff, #bbb);
  background-image: -moz-linear-gradient(top, #fafdff, #bbb);
  background-image: -o-linear-gradient(top, #fafdff, #bbb);
  background-image: -ms-linear-gradient(top, #fafdff, #bbb);
  background-image: linear-gradient(top, #fafdff, #bbb);
  filter: progid:DXImageTransform.Microsoft.gradient(startColorStr='#fafdff', EndColorStr='#bbbbbb')
}

@media only screen and (min-width:670px) {
  
  .search-help {
    -moz-border-radius-topleft: 0.5em;
    -webkit-border-top-left-radius: 0.5em;
    border-top-left-radius: 0.5em;
    -moz-border-radius-topright: 0.5em;
    -webkit-border-top-right-radius: 0.5em;
    border-top-right-radius: 0.5em;
    -moz-border-radius-bottomright: 0;
    -webkit-border-bottom-right-radius: 0;
    border-bottom-right-radius: 0;
    -moz-border-radius-bottomleft: 0;
    -webkit-border-bottom-left-radius: 0;
    border-bottom-left-radius: 0;
    float: right;
    border: solid 0.25em #ddd;
    border-bottom: 0;
    height: 2.45em;
    margin: -2.95em 4% 0 0;
    padding: 0.25em 0.5em 0 0.5em
  }

  .header-context.citizen .search-help {
    border-color: #ED6900
  }

  .header-context.government .search-help {
    border-color: #cdce00
  }
}

.lte-ie8 .search-help {
  float: right;
  border: solid 0.25em #ddd;
  border-bottom: 0;
  height: 2.45em;
  margin: -2.95em 4% 0 0;
  padding: 0.25em 0.5em 0 0.5em
}

.lte-ie8 .site-search #site-search-text {
  height: 1.5em;
  width: 12.5em;
}

.lte-ie8 .header-context.citizen .search-help {
  border-color: #ED6900
}

.lte-ie8 .header-context.government .search-help {
  border-color: #cdce00
}

/* Global footer */

#footer {
	background-color: #fff;
	border-top: solid 0.0675em #ddd;
}

#footer .inner {
	padding: 0.5em 2em;
}

#footer .subsection {
	float: left;
	font-size: 0.8em;
	line-height: 1.4em;
	width: 50%;
}

#footer .subsection p {
	margin: 0.5em 0;
}

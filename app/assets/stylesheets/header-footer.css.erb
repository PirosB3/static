}

#footer .sub-section.beta-notice {
  background: #E5E5E5;
/*  border-bottom: solid 1px #ddd;*/
  float: none;
  padding: 0.5em 2em;
  width: auto;
}

#footer .sub-section.beta-notice h1 {
  display: inline-block;
  margin: 0;
  margin-right: 1em;
}

#footer .sub-section.beta-notice p {
  display: inline-block;
  margin: 0;
}

#footer .inner {
  padding: 2em 2em;
}

#footer .inner .sub-section {
  float: left;
  font-size: 0.85em;
  line-height: 1.4em;
  margin: 0 2.75% 0 2.75%;
  width: 29.65%;
}
#footer .inner .sub-section.help {
  margin-left: 0;
}
#footer .inner .sub-section.platform {
  margin-right: 0;
}
#footer .inner .sub-section.colophon {
  border-top: solid 1px #667B82;
  margin: 2em 0 0 0;
  padding: 1em 0 0 0;
  width: 100%;
}

#footer .sub-section h1 {
  font-size: 1em;
  margin: 0;
}

#footer .sub-section p {
  margin: 0 0 0.5em 0;
}

#footer .sub-section ul {
  list-style: none;
  margin: 0.25em 0;
  padding: 0;
}

#footer .sub-section ul li {
  margin: 0 0 0.25em 0;
}

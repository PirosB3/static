/* Global header */

#global-header {
  background-color: rgba(0,0,0,0.8);
  -webkit-box-shadow: 0 0 5px rgba(0,0,0,0.3);
  -moz-box-shadow: 0 0 5px rgba(0,0,0,0.3);
  box-shadow: 0 0 5px rgba(0,0,0,0.3);
/*  height: 2em;*/
}
.lte-ie8 #global-header {
  background-color: #0C0C0C;
  position: fixed;
  width: 100%;
  z-index: 50;
}

#global-header .header-global {
  padding: 0 4%;
}

@media only screen and (min-width:670px) {
  .js-enabled #global-header {
    position: fixed;
    top: 0;
  }
  #global-header {
    width: 100%;
    z-index: 99999;
  }

}

.wf-gillsans-n4-inactive #global-header {
  font-family: "Helvetica Neue", Arial, Helvetica, sans-serif;
}
.wf-gillsans-n4-loading #global-header {
  font-family: "Helvetica Neue", Arial, Helvetica, sans-serif;
}
.wf-gillsans-n4-active #global-header {
  font-family: 'Gill Sans W01 Medium', sans-serif;
}
#global-header h1 {
  font-family: 'Gill Sans W01 Medium', sans-serif;
  font-size: 1.5em;
  font-weight: normal;
  line-height: 1.25em;
  float: left;
  margin-right: 1.5em;
  text-transform: uppercase;
}

.lte-ie8 #global-header h1 {
  height: 1.25em;
}

#global-header h1 a {
  float: left;
}

#global-header .header-global a {
  color: #fff;
  text-decoration: none;
}

#global-header .header-global a:hover {	
  text-decoration: underline;
}

#global-header ul {
  margin: 0;
  padding: 0;
}

#global-header ul li,
body.citizen nav.header-context ol li {
  float: left;
  list-style: none;
}

#global-header .header-global ul {
  float: left;
  margin-right: 0;
  line-height: 2em;
}

#global-header .header-global ul li {
/*  font-size: 0.85em;*/
  margin-right: 1.5em;
  margin-bottom: 0;
}

#global-header .header-global ul li:last-child {
  margin-right: 0;
}

#global-header .header-global ul li a {
  font-size: 0.85em;
/*  padding-left: 1em;*/
  text-decoration: none;
}

#global-header .header-global ul li a:hover {
  color: #fff
}

body.citizen nav.header-context {
  background-color: #F2F2F2;
}

body.citizen nav.header-context ol {
  margin: 0 auto;
  max-width: 960px;
  padding: 2.5em 0 0.5em 0;
}
.lte-ie8 body.citizen .header-context ol {
  padding: 0.25em 0;
  width: 960px;
}

body.citizen nav.header-context ol li {
  background-image: url(<%= asset_path "section-divider-arrow.png" %>);
  background-position: 0.2em 30%;
  background-repeat: no-repeat;
  padding-left: 1.5em;
  margin-right: 0.5em;
}

body.citizen nav.header-context ol li:first-child {
  background: none;
  margin-left: 0.75em;
  padding-left: 0;
}

body.citizen nav.header-context a {
/*  color: #2E8ACA;
  font-size: 0.85em;
  margin-right: 2%;
  text-decoration: none;*/
  white-space: nowrap
}
body.citizen nav.header-context a:hover {
/*  color: #2E3191;
  text-decoration: underline;*/
}

body.citizen nav.header-context a:last-child {
  margin-right: 0
}

body.government #global-header .header-context {
  border-color: #cdce00;
  border-bottom-color: #9a9b00
}

body.government #global-header .header-context nav {
  font-weight: bold;
  text-decoration: none;
}

body.government #global-header .header-context nav a {
  color: #777;
}
body.government #global-header .header-context nav a:hover {
  color: #9a9b00
}

@media only screen and (min-width: 865px) {
  #global-header .header-context nav a.home,
  #global-header .header-context ol li.current-context {
    margin-right: 4%
  }
}

body.government #global-header .header-context {
  border-color: #cdce00;
  border-bottom-color: #9a9b00
}

@media only screen and (min-width: 600px) {
  body.government #global-header .header-context nav {
    width: 79.5%;
  }
}

form.site-search {
  margin-top: 0.2em;
}

form.site-search .button {
  background-color: #2E8ACA;
  line-height: 1.25em;
  padding: 0.2em 0.5em;
}

form.site-search #site-search-text {
  border: none;
  line-height: 1.25em;
  padding: 0.2em 0.25em;
}

@media only screen and (min-width:670px) {
  .search-help {
    float: right;
  }

  body.government .header-context .search-help {
    border-color: #cdce00
  }
}
.lte-ie8 .search-help {
  float: right;
}

/* Global footer */

#footer {

}

#footer .beta-notice {
  background: #F37920;
  float: none;
  padding: 0.5em 4%;
  width: auto;
}

#footer .beta-notice p {
  display: inline-block;
  margin: 0 1em 0 0;
}

#footer .inner {
  padding: 1em 4%;
}

#footer .inner a {
  color: #000;
}
#footer .inner a:hover {
  text-decoration: none;
}

#footer .colophon-and-help {
  float: left;
  width: 35%;
}

#footer .help ul {
  margin: 0;
  padding: 0;
}

#footer .help ul li {
  display: inline;
  list-style: none;
  margin-right: 0.75em;
}

#footer .colophon {
  margin: 1.5em 0 0 0;
}

#footer .colophon p {
  font-size: 0.85em;
}

#footer .copyright {
  float: left;
  text-align: right;
  width: 65%;
}

#footer .copyright p:first-child {
  margin-top: 0;
}
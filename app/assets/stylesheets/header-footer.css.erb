/* Global footer */

#footer .beta-notice {
  background: #F17921;
  color: #000;
  float: none;
  width: auto;
  text-align:center;
}

#footer .beta-notice p {
  display: inline-block;
  margin: 0.7em auto;
  width:960px;
  text-align:left;
}

#footer .inner {
  padding: 1em 4%;
}

@media only screen and (min-width:1024px) {
  #footer .inner {
    margin: 0 auto;
    max-width: 960px;
    /*width: 81%;*/
  }
}

#footer a {
  color: #000;
}

#footer a:hover {
  text-decoration: none;
}

#footer .colophon-and-help {
  float: left;
  width: 62%;
}

#footer .help ul {
  margin: 0;
  padding: 0;
}

#footer .help ul li {
  display: inline;
  list-style: none;
  margin-right: 0.75em;
}

#footer .colophon {
  margin: 1.5em 0 0 0;
}

#footer .colophon p {
  font-size: 0.85em;
}

#footer .copyright {
  float: left;
  text-align: right;
  width: 38%;
}

#footer .copyright p {
  background-image: url(<%= asset_path "coat-of-arms.png" %>);
  background-position: 100% 0;
  background-repeat: no-repeat;
  color: #7F7F7F;
  margin: 4.3em 0 0 0;
  padding: 1em 4.5em 1em 0;
}

@media only screen and (max-width:764px) {
  form.site-search {
    padding-top: 0.25em;
  }
  form.site-search .button {
    width: 25%;
  }
  form.site-search #site-search-text {
    width: 72%;
  }
  body.citizen nav.header-context ol {
    padding-top: 0.5em;
  }
  body.citizen nav.header-context .beta-notice p {
    right: 0;
    top: 0;
  }
  body.citizen nav.header-context ol li:first-child {
    margin-left: 4%;
  }
  #footer .help ul li {
    float: none;
  }
  #footer .colophon-and-help,
  #footer .copyright {
    float: none;
    width: auto;
  }
  #footer .copyright {
    margin-top: 1.5em;
    text-align: left;
  }
  #footer .copyright p {
    background-position: 0 0;
  }
}

/* tour link */


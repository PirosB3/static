/* Global header */

#global-header {
  background-color: #303030;
  -webkit-box-shadow: 0 0 5px rgba(0,0,0,0.3);
  -moz-box-shadow: 0 0 5px rgba(0,0,0,0.3);
  box-shadow: 0 0 5px rgba(0,0,0,0.3);
  padding: 0.4em 0 0.4em 0;
}
.lte-ie8 #global-header {
  background-color: #0C0C0C;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 50;
}

#global-header .header-global {
  padding: 0 1%;
}
@media only screen and (min-width:1024px) {
  #global-header .header-global {
    margin: 0 auto;
    max-width: 960px;
  }
}

@media only screen and (min-width:670px) {
  .js-enabled #global-header {
    position: fixed;
    top: 0;
  }
  #global-header {
    width: 100%;
    z-index: 1000;
  }
}

#global-header h1 {
  font-size: 1.6em;
  font-weight:400;
  float: left;
  line-height: 1.15em;
  margin-right: 1.5em;
  text-transform: uppercase;
}

.lte-ie8 #global-header h1 {
  height: 1.25em;
}

#global-header h1 a {
  background-image: url(<%= asset_path "gov.uk_logotype.png" %>);
  background-position: 0 1px;
  background-repeat: no-repeat;
  float: left;
  padding: 0 0 0 1.7em;
  width:141px;
  text-indent:-999px;
}
#global-header h1 a:hover{
  background-position: 0 -43px;
}
#global-header .header-global a {
  color: #fff;
  text-decoration: none;
}

#global-header .header-global a:hover {
  text-decoration: underline;
}

#global-header ul {
  margin: 0;
  padding: 0;
}

#global-header nav ul li,
body.citizen nav.header-context ol li {
  float: left;
  list-style: none;
}

#global-header .header-global nav ul {
  float: left;
  margin-right: 0;
  line-height: 2em;
  margin-left:1em
}

#global-header .header-global nav ul li {
  line-height: 1.75em;
  margin-right: 1.5em;
  margin-bottom: 0;
}

#global-header .header-global nav ul li a {
  font-size: 1em;
  text-decoration: none;
}

#global-header .header-global nav ul li a:hover {
  color: #fff
}

#global-header .header-global ul.ui-autocomplete a {
  color: #333;
}

#global-header .header-global ul.ui-autocomplete a:hover {
  text-decoration: none;
}

#global-header .header-global ul.ui-autocomplete {
  position: absolute;
}

body.citizen nav.header-context {
  background-color: #F2F2F2;
}

body.citizen nav.header-context ol {
  margin: 0 auto;
  max-width: 960px;
  padding: 3em 0 0.5em 0;
}
.lte-ie8 body.citizen .header-context ol {
  _padding: 0.25em 0;
  _width: 960px;
}

body.citizen nav.header-context ol li {
  background-image: url(<%= asset_path "separator.png" %>);
  background-position: 0.2em 36%;
  background-repeat: no-repeat;
  padding-left: 1.3em;
  margin-right: 0.5em;
}

body.citizen nav.header-context ol li:first-child {
  background: none;
  margin-left: 0.75em;
  padding-left: 0;
}

body.citizen nav.header-context a {
  white-space: nowrap;
}

body.citizen nav.header-context a:last-child {
  margin-right: 0
}


/* Filters
============================================================================ */
.filters {
  width: 22.4rem;
  /* background-color: #c1cacb; */
  float: left;
  margin: 0 0 0 -4rem;
}

.filters .group {
  margin-bottom: 1.6rem;
}

.filters h2 {
  font-size: 0.85em;
  font-weight: normal;
  height: 30px;
  letter-spacing: 0.15em;
  line-height: 1.5em;
  margin: 0 0 .8rem 0;
  padding: 0;
  position: relative;
  text-transform: uppercase;
}

.filters ul {
  list-style: none;
  margin: 0;
  padding: 0px;
}

.filters ul li {
  display: block;
  /* height: 30px; */
  margin: 0 -2px 0 -6px;
}

.filters ul li a {
  border-radius: 2px;
  display: block;
  padding: 2px 2px 2px 6px;
  text-decoration: none;
  -webkit-transition: 0.4s ease-out;
  -moz-transition: 0.4s ease-out;
  -o-transition: 0.4s ease-out;
  transition: 0.4s ease-out;
}

.filters ul li a:hover {
  background-color: #eee;
}

.filters ul li.active a {
  background-color: #2E3191;
  color: #fff;
}

.filters ul li a span {
  background-color: #fff;
  border-radius: 2px;
  color: #999;
  display: block;
  float: right; 
  font-size: 1.4rem;
  height: 20px;
  line-height: 20px;
  min-width: 16px;
  padding: 2px 4px;
  text-align: center;
  text-decoration: none;
}

.filters ul li.transaction a,
.filters ul li.smart_answer a,
.filters ul li.guide a {
  background-position: 0.1em 0.15em;
  text-indent: 26px;
}

.filters ul li.transaction a span,
.filters ul li.smart_answer a span,

/* Search Form
============================================================================ */
form.search-header {
  display: block;
  margin-bottom: 2.4rem;
}

/* button styles taken from core.css, should be changed to also apply to <button>s */
button {
  background-color: #B01117;
  background-image: url(<%= asset_path "button-overlay.png" %>);
  _background-image:none;
  background-position: 0 100%;
  background-repeat: repeat-x;
  border: solid 1px #B01117;
  -webkit-border-radius: 2px;
  -moz-border-radius: 2px;
  border-radius: 2px;
  color: #fff;
  cursor: pointer;
  display: inline-block;
  padding: 0.5em 0.75em;
  position: relative;
  text-decoration: none;
  -webkit-transition: background-color 0.5s ease-in-out;
  -moz-transition: background-color 0.5s ease-in-out;
}
button:hover {
  background-color: #DD322D;
  border: solid 1px #760418;
  color: #fff;
}
button:active {
  background-color: #DD322D;
  box-shadow: inset 0 1px 2px rgba(0,0,0,0.5);
}

/* reset pesky webkit search styles */
input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration {
  display: none;
}

/* Stealing styles from the homepage, should be standardised */
form.search-header input, form.search-header button {
  font-size: 1.5em;
  line-height: 1.25em;
  padding: 0.125em;
}

form.search-header input[type="text"],
form.search-header input[type="search"] {
  height: 1.25em; width: 63%;
  background-color: #fff;
  -webkit-appearance: textfield;
  border: 2px inset;
}

form.search-header button,
form.search-header .button {
  background-color: #4370CD;
  border-color: #4370CD;
  line-height: 1.25em;
  padding: 0.2em 0.5em;
}

.number-results {
  font-size: 1.4rem;
  padding: 1.2rem 0;
  color: #999;
}


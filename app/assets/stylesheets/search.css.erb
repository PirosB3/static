  float: right;
  line-height: 1.25em;
  text-align: center;
  vertical-align: middle;
}

.search .results.top ul.search-promoted {
  list-style-type:none;
  margin: 0;
  padding: 0;
}

.search .results.top ul.search-promoted h3 {
  font-weight: normal;
}

.search .results.top ul.search-promoted h3 a {
  padding: 0;
}

.search .results.top ul.search-promoted li a.button {
  display: inline-block;
  padding-right: 1.5em;
}

.search .search-not-found {

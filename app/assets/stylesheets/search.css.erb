.search .results.top ul.search-not-found li {
  background-color: inherit;
  border-color: #bbb;
}

.search .results.top ul.search-not-found li:before {
  display: none;
}

.search .results.top ul.search-not-found h3 {
  margin-top: 1.2em;
}

.ancillary.search .results li p {
  font-family: "Helvetica Neue", Arial, Helvetica, sans-serif;
}

.results #search2 {
	margin: 1em;
}
.results #search2 input {
	font-size: 2em;
}
.results #search2 input[type="text"] {
	margin-right: 1em;
}

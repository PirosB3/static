/*
  home page
*/

body.home {
  background: url(<%= asset_path "portsmouth-map.jpg" %>) repeat scroll 0 0 #C9D0D0;
}
body.home #wrapper {
  background-color:transparent;
}
body.home #footer .inner {
  background-color: #C9D0D0;
  padding: 1em 4%;
}
.home #global-header .header-global ul {
  margin-right: 0;
}

.home #wrapper {
  max-width: none;
  padding:0;
}
.lte-ie8 .home #wrapper {
  margin: 0 auto;
}
.home #wrapper section {
  /*background: url(<%= asset_path "home-arrow.png" %>) no-repeat scroll 52px -109px transparent;*/
  margin: 0 auto;
  width:614px;
 /* padding-left:345px;
  padding-top:32px;*/
}

.lte-ie8 .home #wrapper section {
  margin-top: 0;
}
.js-enabled.home #wrapper section {
  margin: 2.5em auto 0 auto;
  padding-bottom:2em;
}
.lte-ie8 .js-enabled.home #wrapper section {
  margin-top: 1.5em;
}

.homepage-section {
  margin:0 auto;
  margin-top:1em;
  position: relative;
}
.lte-ie8 .homepage-section {
  margin: 0 auto;
  padding: 1em 0;
}

.homepage-section h2:first-child {
  margin-top: 0;
  margin-bottom: 0.75em;
}

.homepage-banner {
  background-color: #dd322d;
  width:614px
}
.feature-items{
  width:614px;
  margin-top:1em;
}
.feature-items h2{
  font-family: 'Gill Sans W01 Medium', sans-serif;
  display: block;
  font-size: 0.90em;
  letter-spacing: 0.15em;
  line-height: 1em;
  margin-bottom: 0.5em;
  text-shadow: none;
  text-transform: uppercase;
  font-weight:normal;
}
.feature-items .section{
  width:237px;
  background-color:#fff;
  padding:0.5em 2em;
}

.feature-items ul{
  list-style-type:none;
  margin:0;
  padding:0;
}
.feature-items .popular{
  margin-left:12px;
  border-top:2px solid #00652E;
}
.feature-items .popular h2{
 color:#00652E; 
}
.feature-items .popular li{
  margin-bottom: 0.5em;
}
.feature-items .popular li a{
  padding: 0.25em 0 0.25em 2em;
  display:block;
  line-height: 1.4em;
}
.feature-items .popular li a:hover {
  text-decoration: none;
}

.feature-items .browse{
  border-top:2px solid #D43783;
}
.feature-items .browse h2{
 color:#D43783; 
}
.feature-items .browse li{
  display:block;
  float:left;
  margin:0 0.5em 0.7em 0;
}
.feature-items .browse a{
  background-color: #EA9BC1;
  text-decoration:none;
  padding:0.2em;
}
.feature-items .browse a:hover,
.feature-items .browse a:focus{
  background-color:#D43783;
}
.homepage-banner .tag-line {
  padding:0.5em 4em 0.5em 2em;
}

.homepage-banner .tag-line p {
  font-family: 'Gill Sans W01 Medium', sans-serif;
  font-size: 2em;
  line-height: 1.15em;
  font-weight:normal;
  color:#fff;
  letter-spacing:0.025em;
  margin: 0.25em 0;
}

.homepage-banner .totry{
  color:#fff;
  padding:0;
  margin:0;
  font-size:0.95em;
}
.homepage-banner form input {
  font-size: 1.5em;
  line-height: 1.25em;
  padding: 0.125em;
}

.homepage-banner form input[type="text"] {
  height: 1.25em;
  width: 63%;
}

.homepage-banner #search_hint {
  color: #666;
  font-size: 0.85em;
  margin-top: 0.75em;
}

.homepage-section ul {
  margin: 0;
  padding: 0;
}

.homepage-section ul li {
  display: inline-block;
  vertical-align: top;
  list-style: none;
  margin-bottom: 0.5em;
  margin-right: 4%;
  width: 100%;
}
.lte-ie8 .homepage-section ul li {
  float: left;
  height: 5em;
}

.homepage-section ul li a {
  display: block;
  padding: 0.45em 0;
}
.homepage-section .tools-topics ul li a {
  padding: 0.45em 0 0.45em 2em;
}
.homepage-section .sections li a {
  font-size: 1.5em;
}

.ui-autocomplete{
  width: 300px;
}
.hint-suggest{
  border: 1px solid #EEEEEE;
  margin:0;
  background-color:#fff;
  display: block;
  left: 0;
  padding: 0.5em;
  position: relative;
  top: 0;
  width: 314px;
  color:#666;
}
.search-loading {
  width: 284px;
  padding-left:30px;
}

.homepage-banner .site-search{
  margin:0;
  padding:0em 2em 1em 2em
}
.carousel{
  width:960px;
}
.carousel ul{
  margin:0;
  padding:0;
  text-indent:0;
  width:960px;
  list-style-type:none;
}
.carousel ul li{
  width:960px;
  height:562px;
}
.section{
  width:50%;
  float:left;
}

.lte-ie8 .sections {
  background-color: #fff;
}
.sections a,
.sections a:visited{
  color:#000;
}
.aerial-info {
  background-color: rgba(255, 255, 255, 0.6);
  font-size: 0.75em;
  padding: 0;
  left: 3.75em;
  position: relative;
  width: 35%;
  margin-bottom:1em;
}
.lte-ie8 .aerial-info {
  background-color: #fff;
}
.aerial-info p{
  padding:0.2em 0.4em;
  margin:0;
  display:block;
} 

@media only screen and (max-width:670px) {
  body.home {
    background: none repeat scroll 0 0 #C9D0D0;
  }
  .home #wrapper section {
    background: none no-repeat scroll 0 0 transparent;
    margin: 0 auto;
    padding-left:0;
    padding-top:0;
  }
  .js-enabled.home #wrapper section {
      margin: 0;
      padding-bottom: 0;
  }
  .homepage-banner {
    width:100%;
  }
  .feature-items{
    width:100%;
    margin-top:0;
  }
  .feature-items .section{
    width:100%;
    background-color:#fff;
    padding:0;
  }
  .feature-items h2,
  .feature-items ul{
    margin:1em 1em 1em 2em
  }
  .feature-items .popular{
    margin-left:0;
    border-top:2px solid #00652E;
  }
  .homepage-section{
    margin:0;
  }
  .homepage-banner .tag-line p{
    font-size:1.5em
  }
  .homepage-banner form input {
    font-size: 1em;
  }
  .homepage-banner .totry {
    line-height: 1em;
    margin-top: 0.5em;
  }
}

/* July 4 Homepage Styles
============================================================================ */

section#homepage {
}

/* Homepage Header
============================================================================ */

section#homepage header {
  padding-top: 85px;
  padding-top: 8.5rem;

  text-align: center;

  width: 960px;
  width: 96rem;

  margin: 0 auto;

}

section#homepage header h1 {
  font-size: 24px; line-height: 30px;
  font-size: 2.4rem; line-height: 3rem;
  font-weight: 300;
}

section#homepage header h1.strap {
  font-size: 72px; line-height: 70px;
  font-size: 7.2rem; line-height: 7rem;

  margin-top: 30px;
  margin-top: 3rem;
}

/* Homepage Search box
============================================================================ */

section#homepage .homepage-search {
  margin: 60px auto;
  margin: 6rem auto;

  width: 600px;
  width: 60rem;

  position: relative;
}

section#homepage .homepage-search .search-suggestions {
  font-size: 24px; line-height: 30px;
  font-size: 2.4rem; line-height: 3rem;
  font-weight: 300;

  margin-bottom: 20px; margin-bottom: 2rem;
}

section#homepage .homepage-search .search-suggestions span {
  color: #d53880;
  font-weight: 500;
}

section#homepage .homepage-search .search-suggestions:before {
  /* search arrow as generated content */
  content: " ";
  display: block;
  width: 124px; height: 113px;

  position: absolute;
  top: 6px; left: -77px;
  z-index: 99;

  background: transparent url(<%= asset_path "homepage-search-arrow.png" %>) no-repeat 0 50%;
}

/* IE8 doesn't support transparent images overlapping form elements,
so we position the arrow slightly outside to point at the search box
instead */
.lte-ie8 section#homepage .homepage-search .search-suggestions:before {
  left: -115px;
}

section#homepage .homepage-search input[type="search"] {
  margin-right: 10px; margin-right: 1rem;
  padding-left: 35px; padding-left: 3.5rem;

  width: 415px; width: 41.5rem;

  font-size: 24px; line-height: 30px;
  font-size: 2.4rem; line-height: 3rem;
  position: relative;
  z-index: 0;
}


section#homepage .homepage-search .button.search {
  background-image: url(<%= asset_path "icon-search.png" %>);
  background-repeat: no-repeat;
}

section#homepage .homepage-search button.search:hover {
  /* overwriting erreneous styles from search.css */
  border: none;
}

/* Carousel
============================================================================ */

section#homepage #homepage-carousel {
  position: relative;
  width: 960px;
  width: 96rem;

  margin: 0 auto;
}

section#homepage .homepage-carousel-wrapper {
  position: relative;
  overflow: hidden;

  height: 240px;
  height: 24rem;
}

section#homepage .homepage-carousel {
  list-style: none;
  padding: 0; margin: 0;
}

section#homepage .homepage-carousel li {
  display: block;

  margin-right: 12px; margin-right: 1.2rem;

  font-size: 24px; line-height: 30px;
  font-size: 2.4rem; line-height: 3rem;

  float: left;

  background: #e1e8e8 url(http://placehold.it/230x160) no-repeat 0 100%;
  box-shadow: 2px 2px 2px rgba(0,0,0,0.333);
}

section#homepage .homepage-carousel li a {
  display: block;

  width: 200px; height: 225px;
  width: 20rem; height: 22.5rem;

  padding: 10px 15px 0 15px;
  padding: 1rem 1.5rem 0 1.5rem;


  color: #333;
  text-decoration: none;
}

section#homepage .homepage-carousel li a:focus {
  background-color: transparent;
}

section#homepage .homepage-carousel-controls {
  list-style: none;
  width: 100%; height: 100%;

  margin: 0; padding: 0;
}

section#homepage .homepage-carousel-controls li {
  display: block;
  width: 60px; height: 60px;
  margin-top: -12rem; /* this is half the height of the carousel itself */

  font-size: 1px; line-height: 1px;
  text-indent: -5000px;

  position: absolute;
}

.lte-ie8 section#homepage .homepage-carousel-controls li {
  margin-top: -120px;
}

section#homepage .homepage-carousel-controls li.prev { left: -60px; }
section#homepage .homepage-carousel-controls li.next { right: -60px; }


section#homepage .homepage-carousel-controls li a {
  display: block;
  width: 100%; height: 100%;
  background: transparent url(<%= asset_path "carousel-arrows.png" %>) no-repeat 0 0;
}

section#homepage .homepage-carousel-controls li.prev a { background-position: 0 0; }
section#homepage .homepage-carousel-controls li.next a { background-position: 100% 0; }
section#homepage .homepage-carousel-controls li.prev a:hover { background-position: 0 100%; }
section#homepage .homepage-carousel-controls li.next a:hover { background-position: 100% 100%; }


section#homepage .homepage-carousel-controls li.pause a { display: none; }
section#homepage .homepage-carousel-controls li.play a { display: none; }


/* Sections
============================================================================ */

section#homepage .homepage-sections {
  background: #D9DFE0;

  margin-top: 85px;
  margin-top: 8.5rem;
}

section#homepage .homepage-sections .group {
  width: 960px;
  width: 96rem;

  margin: 0 auto;


  padding: 20px 0;
}

section#homepage .homepage-sections h2 {
  font-size: 24px; line-height: 30px;
  font-size: 2.4rem; line-height: 3rem;
  font-weight: 300;

  margin: 0 0 20px 0;
  margin: 0 0 2rem 0;
}

section#homepage .homepage-sections-column {
  width: 30%;
  margin-right: 5%;
  float: left;
}

section#homepage .homepage-sections-column:last-child {
  margin-right: 0;
}
/* IE8 drops selectors it doesn't understand, like the above, so we
need a separate group */
.lte-ie8 section#homepage .homepage-sections-column.last {
  margin-right: 0;
}

section#homepage .sections-list {
  list-style: none;
  margin: 0; padding: 0;
}

section#homepage .sections-list li {
  margin-bottom: 20px;
  margin-bottom: 2rem;
}

section#homepage .sections-list h3 {
  font-size: 24px; line-height: 25px;
  font-size: 2.4rem; line-height: 2.5rem;
  font-weight: 300;

  margin: 0;
}

section#homepage .sections-list h3 a {
  color: #000;
  text-decoration: none;
}

section#homepage .sections-list h3 a:hover {
  color: #1D97FF;
  text-decoration: underline;
}

section#homepage .sections-links {
  list-style: none;
  margin: 0; padding: 0;
}

section#homepage .sections-links li {
 font-size: 19px; line-height: 25px;
 font-size: 1.9rem; line-height: 2.5rem;

 display: inline;
}

section#homepage .sections-links li:after {
  content: ", ";
}

section#homepage .sections-links li:last-child:after {
  content: none;
}


section#homepage .sections-links li a {
  color: #000;
  text-decoration: underline;
}

section#homepage .sections-links li a:hover {
  color: #1D97FF;
}
body.home {
  background-color: #F2F2F2;
}

.home #global-header .header-global ul {
  margin-right: 0;
}

.home #wrapper {
  max-width: none;
  padding: 1em 0 0 0;
}
.lte-ie8 .home #wrapper {
  margin: 0 auto;
}

.home #wrapper section {
  margin: 0 auto;
}
.lte-ie8 .home #wrapper section {
  margin-top: 0;
}
.js-enabled.home #wrapper section {
  margin: 2.5em auto 0 auto;
}
.lte-ie8 .js-enabled.home #wrapper section {
  margin-top: 1.5em;
}

.homepage-section {
/*  margin: 0 -1em;*/
  margin-top:1em;
  position: relative;
}
.lte-ie8 .homepage-section {
  margin: 0 auto;
  padding: 1em 0;
}

.homepage-section h2:first-child {
  margin-top: 0;
  margin-bottom: 0.75em;
}

.homepage-banner {
  background: url(<%= asset_path 'crest-home.png' %>) no-repeat 100% 50% #dd322d;
}

.homepage-banner .tag-line {
  padding:0.5em 2em 0.5em 1em;
  width: 60%;
}

.homepage-banner .tag-line p {
  background: url(<%= asset_path 'button-arrow.png' %>) no-repeat 0 0 #dd322d;
  font-family: 'Gill Sans W01 Medium', sans-serif;
  font-size: 2.2em;
  line-height: 1.25em;
  font-weight:normal;
  color:#fff;
  padding-left:55px;
  margin: 0.25em 0;
}

.homepage-banner form {

}
.homepage-banner .totry{
  color:#fff;
  padding:0;
  margin:0;
  font-size:0.75em;
}
.homepage-banner form input {
  font-size: 1.5em;
  line-height: 1.25em;
/*  height: 1.5em;*/
  padding: 0.125em;
}

.homepage-banner form input[type="text"] {
  width: 32.5%;
}
.lte-ie8 .homepage-banner form input[type="text"]  {
  height: 1.5em;
}

.homepage-banner form input.button {

}

.homepage-banner #search_hint {
  color: #666;
  font-size: 0.85em;
  margin-top: 0.75em;
}

.homepage-section ul {
  margin: 0;
  padding: 0;
}

.homepage-section ul li {
  display: inline-block;
  vertical-align: top;
  list-style: none;
  margin-bottom: 0.5em;
  margin-right: 4%;
  width: 29%;
}
.lte-ie8 .homepage-section ul li {
  float: left;
  height: 5em;
}

.homepage-section ul li a {
  display: block;
  padding: 0.45em 0;
}
.homepage-section .tools-topics ul li a {
  padding: 0.45em 0 0.45em 2em;
}
.homepage-section .sections li a {
  font-size: 1.5em;
}

.ui-autocomplete{
  width: 300px;
}
.hint-suggest{
  border: 1px solid #EEEEEE;
  margin:0;
  background-color:#fff;
  display: block;
  left: 0;
  padding: 0.5em;
  position: relative;
  top: 0;
  width: 314px;
  color:#666;
}
.search-loading {
  width: 284px;
  padding-left:30px;
}

.homepage-banner .site-search{
  margin:0;
  padding:0em 2em 1em 4.5em
}
.carousel{
/*  margin-top:1em;*/
/*  border-top:2px solid #dd322d;*/
  width:960px;
}
.carousel ul{
  margin:0;
  padding:0;
  text-indent:0;
  width:960px;
  list-style-type:none;
}
.carousel ul li{
  width:960px;
  height:562px;
}
.section{
  width:50%;
  float:left;
}
.sections{
  background-color:rgba(255, 255, 255, 0.7);
  margin-left:2em;
  padding:1em;
}
.sections a,
.sections a:visited{
  color:#000;
}
.feature-items{
  border-top:2px solid #dd322d;
  margin-top: 1em;
  overflow:hidden;
  height:562px;
  position:relative;
}
.feature-items .sections{
  top:-350px;
  position:absolute;
  width:90%;
  -webkit-transition: top 0.4s ease-in-out; 
  -moz-transition: top 0.4s ease-in-out;
}
.feature-items:hover .sections{
  top: 0px;
}
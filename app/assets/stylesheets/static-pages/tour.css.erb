.tour .tour-feature.intro{
  color:#fff;
   background: url(<%= asset_path "button-arrow.png" %>) no-repeat scroll 20px 35% #D33883;
   padding:1em 1em 1em 4em;
}
.tour .intro p{
  font-size:3.2em;
  line-height:0.9em;
  margin-bottom:-0.1em;
  font-weight:bold;
  padding-top:0.5em;
  padding-bottom:0.5em;
}
.tour .intro span{
  display:block;
  font-weight:normal;
  opacity:0.9;
  font-size:0.6em;
}
.tour-feature{
  background-color:#E1E8E8;
}
.tour header.page-header hgroup h1 span{
  color:#90278E;
}
.tour header.page-header hgroup{
  margin:0;
  border-color:#90278E;
}
.article-container {
  background-color: #FFFFFF;
  margin-right: 15em;
}
.tour header.page-header hgroup h1{
  padding: 0.1em 1.5em 0 1.65em;
}

.tour .tour-feature{
  margin:1em;
  padding:1em;
}


.tour .description h2{
  margin-top:0;
  padding:0;
}
.tour .thanks{
  padding:2em;
  font-weight:normal;
}
.tour .intro{
  color:#fff;
   background: url(<%= asset_path "button-arrow.png" %>) no-repeat scroll 0 0 #D33883;
}
.tour .intro p{
  font-size:3.2em;
  line-height:0.9em;
  margin-bottom:-0.1em;
  font-weight:bold;
  padding-top:0.5em;
  padding-bottom:0.5em;
}
.tour .intro span{
  display:block;
  font-weight:normal;
  opacity:0.9;
  font-size:0.6em;
}
.tour-feature{
  background-color:#E1E8E8;
}

.tour header.page-header hgroup{
  margin:0;
}

.tour header.page-header hgroup h1{
  padding: 0.1em 1.5em 0 0.5em;
}

.tour .tour-feature{
  margin:1em;
  padding:1em;
}

.tour h2{
  padding:1em 1em 0 1em;
}

.tour .description h2{
  margin-top:0;
  padding:0;
}

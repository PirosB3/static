html.error {
  background-color: #E6E6E6;
}
body.error {
}

body.error .content {
  background: url(<%= asset_path "fail/the-chaps.jpg" %>) no-repeat scroll center top transparent;
  background-color: #E6E6E6;
  text-align: center;
  text-shadow: 0 1px 0 #FFF;
  padding-top: 360px;
  width: auto;
  height: 100%;
}

body.error section h1 {
  font-size: 1.65em;
  line-height: 1.5;
  text-align: center;
}

body.error #footer {
  background: url(<%= asset_path "fail/rule.jpg" %>) repeat-x scroll center top transparent;
  background-color: inherit;
  border: none;
  clear: both;
  margin-top: 2em;
  padding: 1em 0;
  position: relative;
  text-align: center;
  top: 0;
  width: 100%;
}

body.error #footer .subsection {
  color: #6D6D6D;
  float: none;
  text-align: center;
  margin: 0 auto;
}

body.error .copyright {
  background: url(<%= asset_path "fail/coat-of-arms.jpg" %>) no-repeat scroll center top transparent;
  padding-top: 4.5em;
}
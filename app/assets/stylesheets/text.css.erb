/*
 * Text styles for articles.
 * It's kind of like typography innit.
*/

article h1 {
  font-size:1.5625em;
  font-weight:300;
  line-height: 1.1em;
  margin-top: 1.5em;
  margin-bottom: 0.75em;
}

article header h1 {
  color: #000;
  font-size: 1.5625em;
  font-weight: 300;
  line-height: 1.2em;
  margin-top: 0;
  margin-bottom: 0;
  padding-bottom: 0.5em;
}
.lte-ie8 article header h1 {
  zoom: 1;
}

article header h1 span {
  color: #666;
  display: block;
  font-family: "NTA", "Helvetica Neue", Arial, Helvetica, sans-serif;
  font-size: 0.5em;
  font-weight: 300;
  line-height: 1em;
  margin-bottom: 0.4em;
}

article h1 + h2 {
  margin-top: 0.75em;
}

article h2 {
  margin-bottom: 0.625em;
  margin-top: 2em;
  font-size: 1.5625em;
  line-height:1.2em;
  font-weight:300;
}

article h2 + h3 {
  margin-top: 0.75em;
}

article h3 {
  font-size: 1.2em;
  line-height: 1.11em;
  font-weight:300;
  margin-top: 2.4em;
  margin-bottom: 0.75em;
}

article h3 + h4 {
  margin-top: 0.75em;
}

article h4 {
  margin-top: 1.5em;
  margin-bottom: 0;
}

article h3 + table {
  margin-top: 0.652em;
}

article h4 + table {
  margin-top: 0.75em;
}

article h2 + p,  article h3 + p,  article h4 + p,
article h2 + ol, article h3 + ol, article h4 + ol,
article h2 + ul, article h3 + ul, article h4 + ul {
  margin-top: 0.2em;
}

article h1,
article h2,
article h3,
article h4 {
  color: #000;
}

article p, article ul, article ol {
  margin: 0.75em 0;
}

article p {
  font-size: 1.1875em;
}

article li {
  font-size: 112.5%;
  margin: 0.25em 0;
  padding-left: 0.3em;
}

article li ul,
article li ol {
  margin: 0;
  list-style-position:inside;
}

article li li {
  font-size: 100%;
  list-style-type: circle;
}

article li p {
  font-size: 100%;
  margin: 0;
}

article ul, article ol {
  padding-left: 2.1em;
  margin-left: -2.4em;
}



article ul {
  list-style-type: circle;
  list-style-image: url(<%= asset_path "bullet-disc-5px.gif" %>);
  margin-bottom: 1.25em;
}

article ol {
  list-style-type: decimal;
}

article table ul {
  padding-left: 0.75em;
  margin: 0;
  font-weight: 400;
}

article table ul li:last-child {
  margin-bottom: 0;
}

article dl {
  margin-top: 1.5em;
  margin-bottom: 1.88em;
}

article dt {
  margin-bottom: 0.25em;
  font-size: 1.25em;
  font-weight: bold;
}

article dd {
  margin-bottom: 0.75em;
}

article table {
  border-collapse: collapse;
  border-spacing: 0;
  margin:2.2em -1em 3.8em -1em;
  width:105.95%;
}

article table caption {
  text-align:left;
  font-weight: normal;
  margin-bottom: 0.5em;
}

article th, article td {
  vertical-align: top;
  line-height: 1.3em;
  padding: 0.7em 0.5em 0.7em 1em;
}

article tr:nth-child(even) td {
  background-color: #fff;
}

article td {
  background: #fafafa;
  border:dotted 1px #bbb;
}

article th {
  
  line-height:1.25em;
  text-align: left;
  color:#000;
  font-weight:normal;
  background-color: #e1e8e8;
  border:solid 1px #bbb;
}


article table.calendar {
  background-color: inherit;
  margin: 1em auto 2em;
  width: 100%;
}

/*
  more article formatting including markdown styles
*/

.citizen article .summary,
.citizen .ancillary .summary {
  background-color: #CCE0D6;
  margin: 0 -1em 0;
  padding: 1em 1em 0;
}

.citizen .ancillary .summary {
  margin-bottom: 2em;
}

article .summary p,
article .summary h2,
.citizen .ancillary .summary p,
.citizen .ancillary .summary h2 {
  border: none;
  margin: 0 0.75em 0 0;
  min-height: 2.75em;
  
}
.lte-ie8 article .summary p,
.lte-ie8 article .summary h2,
.lte-ie8 .citizen .ancillary .summary p,
.lte-ie8 .citizen .ancillary .summary h2 {
  _height: 2.75em;
}

article .summary h2,
.citizen .ancillary .summary h2 {
  font-weight: normal;
  line-height: 1.35em;
}

article .advisory {
  background-color: rgba(249,188,144,1);
  line-height: 1.3em;
  margin-bottom: 1em;
  padding: 1em;
  text-align: left;
}

article .advisory p {
  background: url(<%= asset_path "orange-arrow.png" %>) no-repeat 0 0.3em;
  margin: 0 0.75em 0 0;
  min-height: 1.75em;
  padding: 0 0 0 2.5em;
}
.lte-ie8 article .advisory p {
  _height: 1.75em;
}

article .advisory strong {
  font-weight: normal;
}

article .advisory.high-alert {
  background-color: #F4DCDD;
  border-color: #C00;
}

article .intro {
  background-color: #cce0d6;
  margin: 0 -1em 1.5em -1em;
  padding: 1em 1em 1em 1em;
}

article .intro p:first-child {
  margin-top: 0;
}

article .example {
  background: #E8F0F0;
  border: solid 1px #93A1A1;
  margin: 0.75em 0;
  padding: 0 1em;
}

article .help-notice,
article .info-notice {
  background-color:#d5e8f3;
  margin: 1em -1em 1.5em -1em;
  padding: 1em 1em 1em 1em;
  background: url(<%= asset_path "icon-important.png" %>) no-repeat scroll 98% 1em #D5E8F3;
}

article .info-notice{
  background: url(<%= asset_path "icon-information.png" %>) no-repeat scroll 98% 1em #D5E8F3;
}

article .help-notice p,
article .info-notice p {
  margin: 0;
  padding-right:4em;
}

article .info-notice a[rel="external"] {
  display:inline;
}

article .form-download{
  background: url(<%= asset_path "icon-file-download.png" %>) no-repeat scroll 98% 0.5em #D5E8F3;
  margin: 0.75em -1em;
  padding: 0.5em 1em 0.5em 1em;
}

article .form-download p {
  margin: 0 0;
  padding-right:3em;
}
article .form-download a {
  color: #000;
  display: block;
}


.contact {
  background-color:#d5e8f3;
  box-sizing: border-box;
  margin: 0.75em -1em;
  padding: 0.25em 1em;
  min-width: 60%;
}

.contact dl dt {
  font-weight: bold;
  margin: 0 0 0.25em 0;
}

.contact dl dd {
  margin: 0 0 0.5em 0;
}

.meta-data .contact {
  width: auto;
}

.contact dl dt, .meta-data .contact dt {
  float: left;
  clear: left;
}

.contact dl dd, .meta-data .contact dd {
  margin-left: 8.5em;
}

article .address {
  background: #f2f2f2 url(<%= asset_path "stamp.png" %>) 95% 1em no-repeat;
  border: solid 1px #d6d6d6;
  margin: 0.75em 0;
  padding: 2em 16% 2em 15%;
  min-width: 35%;
}
.lte-ie8 article .address {
  width: 35%;
}

article ol.places {
  list-style-type: none;
  padding-left: 0;
  margin-left: 0;
}

article .place {
  border: solid 1px #93A1A1;
  margin: 0.75em 0;
  padding: 1em;
}

article .places.answer_locations .information {
  margin-left: 7.5em;
  min-height: 3em;
}

article .place .map {
  float: left;
}
article .place .map .view_map {
  font-size: 0.85em;
}

article .place .information {
  margin-left: 13.5em;
  min-height: 13em;
}
.lte-ie8 article .place .information {
  _height: 13em;
}

article .place .address {
  background: none;
  border: none;
  margin: 0;
  padding: 0;
  width: auto;
  display: block;
}

article .place .address span {
  display: block;
}

article .place .url {
  overflow: hidden;
  text-overflow: ellipsis;
}

article .place .additional-information {
  border-top: dashed 1px #bbb;
  font-size: 0.85em;
  margin-top: 1em;
}
article .place .additional-information a {
  display: block;
}

article ol.steps {
  padding-left: 0;
  margin-left: 0;
}

article ol.steps li {
  background-position: 0 0.87em;
  background-repeat: no-repeat;
  list-style-type: none;
  padding: 0.75em 0 0.75em 2.2em;
}
article ol.steps li:nth-child(1) {
  background-image: url(<%= asset_path "icon-step-1.png" %>);
}
article ol.steps li:nth-child(2) {
  background-image: url(<%= asset_path "icon-step-2.png" %>);
}
article ol.steps li:nth-child(3) {
  background-image: url(<%= asset_path "icon-step-3.png" %>);
}
article ol.steps li:nth-child(4) {
  background-image: url(<%= asset_path "icon-step-4.png" %>);
}
article ol.steps li:nth-child(5) {
  background-image: url(<%= asset_path "icon-step-5.png" %>);
}
article ol.steps li:nth-child(6) {
  background-image: url(<%= asset_path "icon-step-6.png" %>);
}
article ol.steps li:nth-child(7) {
  background-image: url(<%= asset_path "icon-step-7.png" %>);
}

.lte-ie8 article ol.steps {
  border-left: solid 3px #ccc;
  padding: 0 0 0 2.5em;
}
.lte-ie8 article ol.steps li {
  list-style-type: decimal;
  margin: 0;
  padding: 0;
}

.highlight-answer {
  font-size:1.5em;
  background-color:#28a197;
  color:#fff;
  text-align:center;
  padding:0.1em 2em 0.2em 2em;
  margin:0 -1em 1em -1em;
}
.highlight-answer p {
  line-height:2.3em;
  color:#fff;
}
.highlight-answer p em {
  font-size:2.45em;
  font-style:normal;
  font-weight:400;
  display:block;
  margin-bottom:0.5em;
  color:#fff;
}
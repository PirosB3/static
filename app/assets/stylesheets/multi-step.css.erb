/* This is basically Smart Answers */

/*
  landing page
*/
.start {
  display: inline-block;
}

.start a {
  font-size: 1.5em;
  margin: 0.5em 0 0 0;
}


/*
  questions
*/

.hint {
  color: #666;
  display: block;
}

.done-questions {
  position: relative;
}

.start-again {
  background: #fff;
  position: absolute;
  right: 0;
  top: -2.5em;
  height: 2.5em;
  width: 11em;
}

.start-again a {
  display: block;
  line-height: 2.5em;
  text-align: center;
  text-decoration: underline;
}

.start-again a:hover {
  text-decoration: none;
}

.done-questions ol {
  margin: 0;
  padding: 0;
  position: relative;
  z-index: 1;
}

.done-questions ol > li {
  list-style: none;
  position: relative;
  padding: 0.5em 1.5em 0.5em 5em;
}

.done-questions ol > li.done {
  background: #D5ECEA;
  border-bottom: solid 1px #b6d6d2;
  overflow: hidden;
}

.done-questions ol > li.done:last-child {
  border-bottom: none;
}

.question .question-number {
  font-weight: normal;
}

li.done h3,
li.upcoming h3 {
  display: inline;
  font-size: 1em;
  margin: 0 0.5em 0 0;
  font-weight:300;
}
.lte-ie8 li.done h3,
.lte-ie8 li.upcoming h3 {
  line-height: 1.5em;
  position: relative;
}

li.done .answer {
  color: #315843;
  font-weight:400;
  display: inline;
  padding: 0.1em 0.3em;
  margin-right: 0.5em;
}

li.done .undo {
  display: inline;
  float: right;
  font-size: 0.85em;
  margin: 0 0 0 0.5em;
}
.lte-ie8 li.done .undo {
  margin: 0;
  *position: absolute;
  *bottom: 0.75em;
  *right: 1em;
}

li.done .undo a {
  color: #333;
  display: block;
}
.lte-ie8 li.done .undo a {
  *color: #333;
}

li.done:hover .undo a {
  color: inherit;
  text-decoration: none;
}

.step.current {
  background-color: #fff;
  margin-right: 15em;
  padding: 0 2em 1em 5em;
  position: relative;
}

.current-question {
  border-top: solid 1px #C9D0D0;
  margin-top: -1px;
  padding: 1.5em 0 1.25em 0;
}

.current-question h2 {
  border: none;
  margin-bottom: 0.5em;
  position: relative;
}
.lte-ie8 .current-question h2 {
  line-height: 1.2em;
}

.question-number {
  display: inline-block;
  margin-left: -1.5em;
  width: 1.5em;
}
.lte-ie8 .question-number {
  display: block;
  position: absolute;
}

.question .question-number {
  margin-left: -1.7em;
}

.current-question ul {
  padding: 0; /* this is so the bullets hang */
}

/* this is the multiple choice selector */
.current-question ul.options {
  list-style: none;
}

.current-question ul.options li {
  line-height: 1.5em;
  margin: 0.5em 0;
}

.question-body + p input.button {
  margin-top: 0.5em;
}


.current-question label {
  margin-left: 0.25em;
}

.current-question select {
  margin-right: 0.25em;
}

.next-question {
  margin: 1.5em 0 0.5em 0;
}

/*
  results
*/

.results .inner {
  padding-top: 2em;
}

.results {
  background-color: #fff;
  float: none;
  margin-right: 0;
  min-height: 480px;
}


.next-steps {
  right: -15em;
  top: 2em;
}

.next-steps .inner {
  padding-top: 0;
  padding-bottom: 1em;
}

.next-steps .inner ul {
  padding: 0 0 0 0em;
}

#wrapper .related.next-steps .inner p,
#wrapper .related.next-steps .inner li {
  font-size: 100%;
}

.next-steps .inner li {
  list-style-type: none;
  margin: 0;
/*  padding-left: 0;*/
}

#wrapper .next-steps.related .inner li a {
  margin: 0;
  padding: 0;
  display: inline;
  font-size: 100%;
}

.meta-data {
  background: #fff;
  float: none;
  font-size: 1em;
  padding: 0 5em 0 0;
  width:auto;
}

.meta-data .modified-date {
  font-size: 0.85em;
  padding-left: 3.3em;
}

/*
  errors messages
*/

.error {
  border:1px solid #B01117;
  background-color:#FFF3CF;
  color:#B01117;
  margin: 0 0 -0.5em -0.5em;
  padding: 0.5em;
}
.error ul {
  margin-bottom: 0;
}
.error-message {
  margin-top: 0;
  color:#B01117;
}

/*
  calculators
*/

.calculator article {
  min-height: 0;
}

@media only screen and (max-width:670px) {
  .step.current,
  .meta-data{
    margin:0;
  }
}

.upcoming-questions ol {
  margin: 0;
  padding: 0;
  position: relative;
  z-index: 1;
}

.upcoming-questions ol > li {
  list-style: none;
  position: relative;
  padding: 0.5em 1.5em 0.5em 5em;
}

.upcoming-questions ol > li.upcoming {
  background: #f0e7d7;
  border-bottom: solid 1px #dac39c;
  overflow: hidden;
}

.upcoming-questions ol > li.upcoming:last-child {
  border-bottom: none;
}

li.upcoming h3 {
  display: inline;
  font-size: 1em;
  margin: 0 0.5em 0 0;
}